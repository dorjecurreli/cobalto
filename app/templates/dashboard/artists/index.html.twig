{% extends 'dashboard/base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block content %}
    <h1>Artist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Bio</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>{{ artist.bio }}</td>
                <td>
                    <a href="{{ path('admin_artists_show', {'id': artist.id}) }}">show</a>
                    <a href="{{ path('admin_artists_edit', {'id': artist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_artists_create') }}">Create new</a>
{% endblock %}
