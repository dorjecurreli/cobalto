{% extends 'dashboard/base.html.twig' %}

{% block title %}{{ 'artists.title'|trans }}{% endblock %}

{% block main %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">{{ 'artists.title'|trans }}</h1>

        <a href="{{ path('admin_artists_create') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                    class="bi bi-person-plus-fill m-lg-1"></i>{{ 'artists.add'|trans }}</a>
    </div>

    <table id="artists-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'artists.name'|trans }}</th>
                <th>{{ 'artists.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>
                    <a href="{{ path('admin_artists_show', {'id': artist.id}) }}"><i class="bi bi-info-square"></i></a>
                    <a href="{{ path('admin_artists_edit', {'id': artist.id}) }}"><i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
