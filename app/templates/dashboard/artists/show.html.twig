{% extends 'dashboard/base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block main %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ artist.bio }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row mt-3">
        <div class="col-12 d-flex justify-content-between">
            <div>
                <a href="{{ path('admin_artists_edit', {id: artist.id}) }}"  class="btn btn-primary btn-custom" name="submit">Edit</a>
                <a  class="btn btn-secondary btn-custom" onclick="window.location.href = '{{ path('admin_artists_list')}}'">Cancel</a>
            </div>
            <a type="button" class="btn btn-danger btn-custom " data-bs-toggle="modal" data-bs-target="#delete-modal_{{ artist.id }}">Delete</a>
            {{ include('dashboard/components/artists/modal-delete.html.twig') }}
        </div>
    </div>



    <div class="container mt-3">
        <h2>Artworks</h2>
        <div class="row">
            {% for artwork in artist.artwork %}
                <div class="col-md-4 mb-3 card-container">
                    <div class="card card-custom">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="text-center mb-2 w-100">
                                {{ artwork.name }}
                            </div>
                            <div class="image-container">
                                <a href="#" class="open-modal" data-bs-toggle="modal" data-bs-target="#imageModal_{{ artwork.id }}">
                                    <img src="{{ vich_uploader_asset(artwork) }}" alt="{{ artwork.name }}" class="img-fluid">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{ include('dashboard/components/artists/image-preview-modal.html.twig') }}
            {% endfor %}
        </div>
    </div>



{% endblock %}
