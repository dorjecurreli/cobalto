{% extends 'dashboard/base.html.twig' %}

{% block title %}User{% endblock %}

{% block main %}
    <h1>{% trans from 'messages' %}events.title-singular{% endtrans %} <strong>{{ event.name }}</strong></h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>{% trans from 'messages' %}events.field.startDate{% endtrans %}</th>
                <td>{{ event.startDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>{% trans from 'messages' %}events.field.startTime{% endtrans %}</th>
                <td>{{ event.startTime|date('H:i') }}</td>
            </tr>
            <tr>
                <th>{% trans from 'messages' %}events.field.description{% endtrans %}</th>
                <td>{{ event.description }}</td>
            </tr>

        </tbody>
    </table>


    <div class="row mt-3">
        <div class="col-12 d-flex justify-content-between">
            <div>
                <a href="{{ path('admin_events_edit', {id: event.id}) }}"  class="btn btn-primary btn-custom" name="submit">{% trans from 'messages' %}global.edit{% endtrans %}</a>
                <a  class="btn btn-secondary btn-custom" onclick="window.location.href = '{{ path('admin_events_list')}}'">{% trans from 'messages' %}global.cancel{% endtrans %}</a>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
            <a type="button" class="btn btn-danger btn-custom " data-bs-toggle="modal" data-bs-target="#delete-modal_{{ event.id }}">{% trans from 'messages' %}global.delete{% endtrans %}</a>
            {{ include('dashboard/components/events/modal-delete.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
