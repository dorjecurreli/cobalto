{% extends 'dashboard/base.html.twig' %}

{% block title %}{{ 'events.edit'|trans }}{% endblock %}

{% block main %}
    <div class="jumbotron">
        <h1 class="display-1 text-center">{{ 'events.edit'|trans }}</h1>

        <div class="container">
            <div class="card card-custom">
                <div class="card-body d-flex flex-column">

                    <div class="col-md-12 mb-3">
                        {{ include('dashboard/events/_form.html.twig', {'button_label': 'global.update'|trans}) }}
                    </div>

                    <div class="mt-auto text-end">
                        <a type="button" class="btn btn-danger btn-custom" data-bs-toggle="modal" data-bs-target="#delete-modal_{{ event.id }}">{% trans from 'messages' %}global.delete{% endtrans %}</a>
                    </div>

                    {{ include('dashboard/components/events/modal-delete.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
