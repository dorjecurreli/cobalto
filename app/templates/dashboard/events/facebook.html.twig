{% extends 'dashboard/base.html.twig' %}

{% block title %}{{ 'events.facebook.publish'|trans }}{% endblock %}

{% block main %}
    <div class="jumbotron">
        <h1 class="display-1 text-center">{{ 'events.facebook.publish'|trans }}</h1>

        <div class="container">
            <div class="card card-custom">
                <div class="card-body d-flex flex-column">

                    <div class="col-md-12 mb-3">
                        {% for form in forms %}
                            <div class="accordion" id="accordionExample">
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ form.children._token.vars.value }}" aria-expanded="true" aria-controls="collapseOne">
                                            {{ form.vars.value.name }}
                                        </button>
                                    </h2>
                                    <div id="collapse-{{ form.children._token.vars.value }}" class="accordion-collapse collapsed collapse" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            {{ include('dashboard/events/_form.facebook.html.twig') }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {% endfor %}
                    </div>

                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12 d-flex justify-content-end">
                    <div>
                        <button type="reset" class="btn btn-secondary btn-custom" onclick="window.location.href = '{{ path('admin_events_list')}}'">{{ 'global.cancel'|trans }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
