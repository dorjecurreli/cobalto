{% extends 'dashboard/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles|join(', ') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_users_list') }}">back to list</a>

    <a href="{{ path('admin_users_edit', {'id': user.id}) }}">edit</a>

    {{ include('dashboard/users/_delete_form.html.twig') }}
