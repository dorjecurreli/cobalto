{% extends 'dashboard/base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block main %}
    <div class="jumbotron">
        <h1 class="display-1 text-center">Edit User</h1>

        <div class="container">
            <div class="card card-custom">
                <div class="card-body d-flex flex-column">

                    <div class="col-md-12 mb-3">
                        {{ include('dashboard/users/_form.html.twig', {'button_label': 'Update'}) }}
                    </div>

                    <div class="mt-auto text-end">
                        <a type="button" class="btn btn-danger btn-custom" data-bs-toggle="modal" data-bs-target="#delete-modal_{{ user.id }}">Delete</a>
                    </div>

                    {{ include('dashboard/components/users/modal-delete.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
